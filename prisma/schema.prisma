// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Link {
  id          String  @id @default(cuid())
  key         String  @unique
  url         String
  uses        Int     @default(0)
  options     String?
  createdAt   DateTime @default(now())
  lastUsedAt  DateTime @default(now())
}